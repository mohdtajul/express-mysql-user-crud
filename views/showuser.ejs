<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>all users</title>
    <style>
        table,th,td{
            border: 2px solid black;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>id</th>
            <th>username</th>
            <th>email</th>
            <th>
            
                <form method="get" action="/user/add">
                        <button>Add user</button>
                    </form>
            
            </th>
        </tr>
        

        <% for(let user of result){%>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td>
                    <form method="get" action="/user/<%=user.id %>/edit">
                        <button>edit user</button>
                    </form>
                </td>

            </tr>
        <%} %>



    </table>
            
</body>
</html>